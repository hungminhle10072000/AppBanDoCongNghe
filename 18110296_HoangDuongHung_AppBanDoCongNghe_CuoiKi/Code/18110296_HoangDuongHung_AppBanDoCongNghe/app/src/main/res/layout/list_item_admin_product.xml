<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/imv_product"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon_account" />

    <TextView
        android:textColor="#7B24AA"
        android:id="@+id/tv_name_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imv_product"
        android:layout_marginLeft="20dp"

        android:text="Tên sản phẩm"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:textColor="#BA0808"
        android:id="@+id/txt_gia"
        android:text="Giá: "
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/imv_product"
        android:layout_below="@id/tv_name_product"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/txt_price_product"
        android:textColor="#000000"
        android:text="kq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_product"
        android:layout_toRightOf="@id/txt_gia"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/txt_sl"
        android:textColor="#E53935"
        android:text="Số lượng: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imv_product"
        android:layout_below="@id/txt_price_product"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/txt_quantity"
        android:textColor="#000000"
        android:text="kq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_price_product"
        android:layout_toRightOf="@id/txt_sl"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"/>

