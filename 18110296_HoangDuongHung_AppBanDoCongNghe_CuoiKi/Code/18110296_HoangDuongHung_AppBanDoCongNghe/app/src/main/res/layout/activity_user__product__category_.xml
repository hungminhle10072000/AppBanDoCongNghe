<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Product_Category_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#C0CA33">
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_margin="20dp"
        android:text="Nhãn hiệu :"
        android:layout_below="@id/my_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:layout_alignParentRight="true"
        android:spinnerMode="dialog"
        android:id="@+id/spn_hang"
        android:layout_below="@id/my_toolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <ListView
        android:id="@+id/lst_user_sanpham"
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:layout_below="@id/spn_hang"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />

    <TextView
        android:gravity="center"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_no_content"
        android:text="Không có sản phẩm nào."
        android:layout_centerInParent="true"/>

</RelativeLayout>