<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminViewBrand">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#C0CA33">
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:foreground="@drawable/shape_border"
        android:background="#D2D6CE"
        android:src="@drawable/camera"
        android:scaleType="fitXY"
        android:id="@+id/img_attach"
        android:layout_below="@id/my_toolbar"
        android:layout_marginTop="80dp"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" />


    <TextView
        android:textColor="#f20"
        android:textSize="20sp"
        android:id="@+id/lbl_tennhanhieu"
        android:text="Tên nhãn hiệu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_attach"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <EditText
        android:background="@drawable/rounded_border_edittext"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/lbl_tennhanhieu"
        android:hint="Tên nhãn hiệu"
        android:id="@+id/edt_name_brand"
        android:paddingLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <TextView
        android:layout_below="@id/edt_name_brand"
        android:layout_marginLeft="10dp"
        android:id="@+id/txt_thuocdanhmuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:text="Thuộc danh mục:"
        android:textColor="#f20"
        android:textSize="20sp"
        />

    <Spinner
        android:spinnerMode="dialog"
        android:id="@+id/spn_danhmuc"
        android:layout_below="@id/txt_thuocdanhmuc"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

</RelativeLayout>