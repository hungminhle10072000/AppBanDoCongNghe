<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Category_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#C0CA33">
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:textColor="#E53935"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Chọn loại sản phẩm bạn muốn xem"
        android:id="@+id/txt_chondanhmuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_toolbar" />

    <ListView
        android:id="@+id/lst_danhmuc"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_below="@id/txt_chondanhmuc"
        android:visibility="invisible" />

    <TextView
        android:gravity="center"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_no_content"
        android:text="Không có danh mục nào."
        android:layout_centerInParent="true"/>

</RelativeLayout>
