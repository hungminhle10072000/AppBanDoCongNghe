<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imv_product"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon_account" />

    <TextView
        android:textColor="#7B24AA"
        android:id="@+id/tv_name_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imv_product"
        android:layout_marginLeft="20dp"

        android:text="Tên sản phẩm"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:textColor="#BA0808"
        android:id="@+id/txt_price_product"
        android:text="Giá"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/imv_product"
        android:layout_below="@id/tv_name_product"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:textColor="#BA0808"
        android:id="@+id/txt_soluong"
        android:text="Số lượng"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/imv_product"
        android:layout_below="@id/txt_price_product"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" />


</RelativeLayout>