<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back_forget2"
    android:layout_height="match_parent"
    tools:context=".ThongTinKH_ThanhToanActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ThongTinKH_ThanhToanActivity">

        <ImageView
            android:id="@+id/back_reg"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:padding="5dp" />

        <TextView
            android:textStyle="bold"
            android:textAllCaps="true"
            android:id="@+id/txt_thongtin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin người mua hàng"
            android:textSize="40dp"
            android:textColor="#000000"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" />

        <EditText
            android:id="@+id/edt_dk_tennguoidung"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_border_edittext"
            android:drawableLeft="@drawable/namnu"
            android:ems="10"
            android:hint="Tên người dùng"
            android:paddingLeft="5dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_thongtin"/>


        <EditText
            android:id="@+id/edt_dk_diachiemail"
            android:layout_width="match_parent"
            android:drawablePadding="8dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_border_edittext"
            android:drawableLeft="@drawable/email"
            android:ems="10"
            android:hint="Địa chỉ email"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_dk_tennguoidung"/>


        <EditText
            android:id="@+id/edt_dk_diachi"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:drawablePadding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_border_edittext"
            android:drawableLeft="@drawable/home"
            android:ems="10"
            android:paddingLeft="6dp"
            android:hint="Địa chỉ"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_dk_diachiemail"/>

        <EditText
            android:id="@+id/edt_dk_sdt"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_border_edittext"
            android:drawableLeft="@drawable/phone"
            android:ems="10"
            android:paddingLeft="2dp"
            android:hint="Số điện thoại"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_dk_diachi"/>

        <Button
            android:id="@+id/btn_xacnhan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:background="@drawable/roundedbutton"
            android:text="Xác nhận"
            android:textColor="#131313"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_dk_sdt" />

    <!--    <Button
            android:id="@+id/btn_quayve"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@drawable/roundedbutton"
            android:text="Quay về"
            android:textColor="#131313"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_xacnhan" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>