<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminViewDetailProductOrdersActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#C0CA33">
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:foreground="@drawable/shape_border"
            android:background="#D2D6CE"
            android:src="@drawable/camera"
            android:scaleType="fitXY"
            android:id="@+id/img_attach"
            android:layout_below="@id/my_toolbar"
            android:layout_marginTop="80dp"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textColor="#f20"
            android:textSize="20sp"
            android:id="@+id/lbl_tensanpham"
            android:text="Tên sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_attach"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <EditText
            android:textColor="#000000"
            android:enabled="false"
            android:background="@drawable/rounded_border_edittext"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/lbl_tensanpham"
            android:hint="Tên sản phẩm"
            android:id="@+id/edt_name_product"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:textColor="#f20"
            android:textSize="20sp"
            android:id="@+id/lbl_giasanpham"
            android:text="Giá sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_name_product"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <EditText
            android:enabled="false"
            android:textColor="#000000"
            android:background="@drawable/rounded_border_edittext"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/lbl_giasanpham"
            android:hint="Giá sản phẩm"
            android:id="@+id/edt_price_product"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:textColor="#f20"
            android:textSize="20sp"
            android:id="@+id/lbl_soluong"
            android:text="Số lượng trong kho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_price_product"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <EditText
            android:textColor="#000000"
            android:enabled="false"
            android:background="@drawable/rounded_border_edittext"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/lbl_soluong"
            android:hint="Số lượng sản phẩm"
            android:id="@+id/edt_quantity_product"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:textColor="#f20"
            android:textSize="20sp"
            android:id="@+id/lbl_mota"
            android:text="Mô tả sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_quantity_product"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <EditText
            android:textColor="#000000"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/lbl_mota"
            android:hint="Mô tả sản phẩm"
            android:id="@+id/edt_des_pro"
            android:paddingLeft="20dp"
            android:gravity="top"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:layout_below="@id/edt_des_pro"
            android:layout_marginLeft="20dp"
            android:id="@+id/txt_thuocnhanhieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:text="Thuộc nhãn hiệu :"
            android:textColor="#f20"
            android:textStyle="bold"
            android:textSize="20sp" />

        <Spinner
            android:spinnerMode="dialog"
            android:id="@+id/spn_nhanhieu"
            android:layout_below="@id/txt_thuocnhanhieu"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </RelativeLayout>

</ScrollView>