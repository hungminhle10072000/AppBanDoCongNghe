<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back_forget2"
    android:layout_height="match_parent"
    tools:context=".AdminMainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#C0CA33">
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/admin_main_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_toolbar"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_admin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <Button
            android:background="@drawable/button_xml"
            android:layout_marginTop="60dp"
            android:id="@+id/btn_qldanhmuc"
            android:layout_width="350dp"
            android:layout_below="@id/imv_home"
            android:layout_height="50dp"
            android:text="Quản lí danh mục"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"/>

        <Button
            android:background="@drawable/button_xml"
            android:layout_marginTop="30dp"
            android:id="@+id/btn_qlnhanhieu"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/btn_qldanhmuc"
            android:text="Quản lí nhãn hiệu"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"/>

        <Button
            android:background="@drawable/button_xml"
            android:layout_marginTop="30dp"
            android:id="@+id/btn_qlsanpham"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/btn_qlnhanhieu"
            android:layout_centerHorizontal="true"
            android:text="Quản lí sản phẩm"
            android:textSize="20sp"/>

        <Button
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_xml"
            android:id="@+id/btn_qldonhang"
            android:layout_marginTop="30dp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/btn_qlsanpham"
            android:textSize="20sp"
            android:text="Quản lí đơn hàng"/>

    </RelativeLayout>


</RelativeLayout>